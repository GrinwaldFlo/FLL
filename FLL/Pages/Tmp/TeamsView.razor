@inherits BasePage
@page "/r34t/teams/view/{RoundId:int}"

@if (!Teams.Rounds.Any(x => x.ID == RoundId))
{
    <div class="alert alert-danger">
        Round @RoundId not found
    </div>
    return;
}


<table class="table table-striped bg-white">
    <thead>
        <tr>
            <th scope="col">Time</th>
            <th scope="col">Table</th>
            <th scope="col">Team 1</th>
            <th scope="col">Team 2</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var match in Teams.Rounds.First(x => x.ID == RoundId).Matchs)
        {
            <tr>
                <th scope="row">@match.StartTime.ToString("HH:mm")</th>
                <td>@match.Table?.Name</td>
                <td>@match.Team1?.Name</td>
                <td>@match.Team2?.Name</td>
            </tr>
        }
    </tbody>
</table>